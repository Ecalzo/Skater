{
    "manifest_version": 2,

    "name": "Skater",
    "description": "Spotlight-like extension for Chrome bookmarks",
    "version": "0.0.6",
    "icons": {
        "16": "icon16.png",
        "24": "icon24.png",
        "32": "icon32.png",
        "48": "icon48.png",
       "128": "icon128.png" 
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon128.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description":"Opens popup.html"
        }
    },
    "permissions": [
        "bookmarks"
    ]
}
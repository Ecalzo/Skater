{
    "manifest_version": 2,

    "name": "Skater",
    "description": "Spotlight-like extension for Chrome bookmarks",
    "version": "1.0.3",
    "icons": {
        "16": "icon16.png",
        "24": "icon24.png",
        "32": "icon32.png",
        "48": "icon48.png",
       "128": "icon128.png" 
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["overlay.js"]
        }
    ],
    "permissions": [
        "bookmarks",
        "tabs"
    ],
    "commands": {
        "launch": {
          "suggested_key": {
            "default": "Ctrl+K",
            "mac": "Command+K"
          },
          "description": "launch Skater"
        }
    }
}
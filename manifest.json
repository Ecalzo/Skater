{
    "manifest_version": 2,

    "name": "Skater",
    "description": "Spotlight-like extension for Chrome bookmarks",
    "version": "1.0",

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "128.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
            "default": "Ctrl+Shift+L",
            "mac": "MacCtrl+Shift+L"
            },
            "description":"Opens popup.html"
        }
    },
    "permissions": [
        "activeTab",
        "bookmarks",
        "tabs"
    ]
}